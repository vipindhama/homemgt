<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.homeguide.activities.CreateIncomeActivity"
    tools:showIn="@layout/activity_create_income">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_income"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:hint="Income"
                android:gravity="center_vertical"
                android:textSize="@dimen/create_expense_edit_text_size"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_expense_edit_text_height" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_income_by"
            android:layout_below="@+id/text_input_income"
            android:layout_marginTop="@dimen/create_expense_edit_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_income_by"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"
                android:hint="Income By (Person name etc...)"
                android:gravity="center_vertical"
                android:textSize="@dimen/create_expense_edit_text_size"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_expense_edit_text_height" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_income_source"
            android:layout_below="@+id/text_income_by"
            android:layout_marginTop="@dimen/create_expense_edit_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_income_source"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"
                android:hint="Income Source"
                android:gravity="center_vertical"
                android:textSize="@dimen/create_expense_edit_text_size"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_expense_edit_text_height" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_date"
            android:layout_below="@+id/text_input_income_source"
            android:layout_marginTop="@dimen/create_expense_edit_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_date"
                android:inputType="none"
                android:focusable="false"
                android:hint="Income Date"
                android:gravity="center_vertical"
                android:textSize="@dimen/create_expense_edit_text_size"
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_expense_edit_text_height" />

        </android.support.design.widget.TextInputLayout>



        <Button
            android:id="@+id/btn_add"
            android:layout_below="@+id/text_input_date"
            android:text="Add"
            android:textColor="@color/white"
            android:background="@drawable/primary_round_corner_background_selector"
            android:layout_marginTop="@dimen/create_expense_btn_vertical_margin"
            android:layout_marginBottom="@dimen/create_expense_btn_vertical_margin"
            android:textSize="@dimen/add_btn_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</ScrollView>
